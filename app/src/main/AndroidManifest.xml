            android:parentActivityName=".MainMenu.LibraryMovieActivity"/>
        <activity android:name=".AddActivity.AddFilmActivity" />
        <activity android:name=".MainMenu.LibraryMovieActivity"
            android:parentActivityName=".MainMenu.MainActivity"/>
        <activity android:name=".MainMenu.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>