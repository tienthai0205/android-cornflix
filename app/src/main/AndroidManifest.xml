        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ShowActivity.ShowDramaActivity"
            android:parentActivityName=".MainMenu.LibraryMovieActivity"/>
        <activity android:name=".MainMenu.FavoriteActivity"
