        <activity android:name=".MainMenu.LibraryEpisodeActivity" />
        <activity android:name=".AddActivity.AddEpActivity" />
        <activity android:name=".AddActivity.AddDramaActivity" />
        <activity android:name=".EditActivity.EditEpisodeActivity" />
