<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowActivity.ShowFilmActivity"
    android:background="@android:color/background_dark">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/filmImageShow"
                android:layout_width="711dp"
                android:layout_height="422dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/mummy" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="1159dp"
                android:layout_height="698dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/background_dark"
                android:orientation="vertical"
                android:weightSum="6"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titleToView"
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity=""
                        android:text="Title"
                        android:textColor="@android:color/background_light"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="textMultiLine"
                        android:maxLines="2"
                        android:textColor="@android:color/background_light"
                        android:textSize="28sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/genreToView"
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity=""
                        android:text="Genre"
                        android:textColor="@android:color/background_light"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/genreText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="textMultiLine"
                        android:textColor="@android:color/background_light"
                        android:textSize="28sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="322dp">

                    <TextView
                        android:id="@+id/releaseToView"
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:gravity=""
                        android:text="Release Year"
                        android:textColor="@android:color/background_light"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/releaseYearText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="textMultiLine"
                        android:textColor="@android:color/background_light"
                        android:textSize="28sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="388dp">

                    <TextView
                        android:id="@+id/directorToView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:gravity=""
                        android:text="Directed by"
                        android:textColor="@android:color/background_light"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/directorText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        android:textColor="@android:color/background_light"
                        android:textSize="28sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="8dp"

                    tools:layout_editor_absoluteY="447dp">

                    <TextView
                        android:id="@+id/starringToView"
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity=""
                        android:text="Starring"
                        android:textColor="@android:color/background_light"
                        android:textSize="32sp" />

                    <TextView

                        android:id="@+id/starringText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        android:textColor="@android:color/background_light"
                        android:textSize="28sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="545dp">

                    <TextView
                        android:id="@+id/descriptionToView"
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity=""
                        android:text="Duration"
                        android:textColor="@android:color/background_light"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/descriptionText"
                        android:layout_width="wrap_content"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <CheckBox
                            android:id="@+id/nominationCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="63dp"
                            android:text="Nomination"
                            android:textColor="@android:color/background_light"
                            android:textSize="28sp"
                            app:layout_constraintVertical_bias="0.363" />

                        <com.example.moviemanagement2.CustomDrawing.CustomFav
                            android:id="@+id/customFav4"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>


</android.support.constraint.ConstraintLayout>