<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowActivity.ShowFilmActivity"
    android:background="@android:color/background_dark">


    <ImageView
        android:id="@+id/filmImageShow"
        android:layout_width="240dp"
        android:layout_height="181dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mummy" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="421dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:weightSum="6"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/background_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleToView"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:gravity=""
                android:text="Title"

                android:textSize="20sp" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:textColor="@android:color/background_light"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/genreToView"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:textColor="@android:color/background_light"
                android:layout_weight="1"
                android:gravity=""
                android:text="Genre"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/genreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="@android:color/background_light"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="322dp">

            <TextView
                android:id="@+id/releaseToView"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:textColor="@android:color/background_light"

                android:layout_weight="1"
                android:gravity=""
                android:text="Release Year"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/releaseYearText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:gravity="center"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="388dp">

            <TextView
                android:id="@+id/directorToView"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:textColor="@android:color/background_light"

                android:layout_weight="1"
                android:gravity=""
                android:text="Directed by"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/directorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="@android:color/background_light"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"

            tools:layout_editor_absoluteY="447dp">

            <TextView
                android:id="@+id/starringToView"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity=""
                android:textColor="@android:color/background_light"
                android:text="Starring"
                android:textSize="20sp" />

            <TextView

                android:id="@+id/starringText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="@android:color/background_light"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="545dp">

            <TextView
                android:id="@+id/descriptionToView"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:gravity=""
                android:text="Duration"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/nominationCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Nomination"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    app:layout_constraintVertical_bias="0.363" />

                <com.example.moviemanagement2.CustomDrawing.CustomFav
                    android:id="@+id/customFav4"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>